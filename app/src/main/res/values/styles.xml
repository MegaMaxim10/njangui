<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Supprimer barre de header / barre de navigation -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personnalisez votre thème ici -->
    </style>

    <!-- Style personnalisé pour les input -->
    <style name="InputStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/input_auth</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:elevation">0dp</item> <!-- Retirer l'ombre -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <!-- Style personnalisé pour les boutons -->
    <style name="CustomButtonLinkStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/drawable_button_secondary_auth</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#414141</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- Style pour les buttons -->
    <style name="ButtonAuthStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/drawable_button_auth</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:elevation">0dp</item> <!-- Retirer l'ombre -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>