<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" package="miu.sts.app.njangui">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/njangui_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/njangui_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.NjanguiApp"
        tools:targetApi="31">

    <!-- Main Activity -->
    <activity android:name=".views.LoginActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        <meta-data
            android:name="android.app.splashScreenTheme"
            android:resource="@drawable/splash_background" />
    </activity>

    <!-- Home Activity -->
    <activity android:name=".views.HomeActivity" />

    </application>

</manifest>